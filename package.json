{
  "name": "react-boilerplate",
  "version": "1.1.0",
  "engines": {
    "node": ">=10.x.x"
  },
  "description": "Minimal ES6 boilerplate with React, Redux & styled-components using webpack compiler.",
  "main": "index.js",
  "scripts": {
    "start": "node node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=development webpack-dev-server",
    "build": "node node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=production webpack",
    "pre-commit": "node node_modules/lint-staged",
    "test": "node node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=test jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "node node_modules/eslint/bin/eslint --fix",
      "git add"
    ],
    "*.{json,md,scss}": [
      "node node_modules/prettier/bin-prettier.js --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manuelpuchta/react-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react",
    "redux",
    "styled-components",
    "es6",
    "webpack",
    "babel"
  ],
  "author": "Manuel Puchta (https://manuelpuchta.de)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manuelpuchta/react-boilerplate/issues"
  },
  "homepage": "https://github.com/manuelpuchta/react-boilerplate#readme"
}
